{
  "manifest_version": 3,
  "name": "Prompt Pounder",
  "version": "1.1",
  "permissions": ["scripting", "tabs", "storage"],
  "description": "Play a quick Whack-a-Mole game while waiting for AI response.",
  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png"
    },
    "default_title": "AI Game",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["whack/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
